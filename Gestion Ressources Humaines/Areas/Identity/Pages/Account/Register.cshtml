@page
@model RegisterModel
@{
    <div class="min-vh-100 d-flex align-items-center">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
                    <div class="card shadow-sm border-0 bg-light">
                        <div class="card-body p-4 p-md-5">
                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="E-mail" />
                                    <label asp-for="Input.Email"></label>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" placeholder="Password" />
                                    <label asp-for="Input.Password"></label>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100">
                                    Register
                                </button>

                                <p class="text-center mt-3 mb-0">
                                    Already have an account?
                                    <a class="link-primary" href="/Identity/Account/Login">Log In</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}